{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (encrypt_decrypt)",
            "type": "cppdbg",            // Use the C/C++ extension's debugger
            "request": "launch",
            "program": "${workspaceFolder}/encrypt_decrypt",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",              // Specify that the debugger is GDB
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"      // Run the 'build' task from tasks.json first
        },
        {
            "name": "Debug (cryption standalone)",
            "type": "cppdbg",            // Use the C/C++ extension's debugger
            "request": "launch",
            "program": "${workspaceFolder}/cryption",
            "args": [
                "test_file.txt,ENCRYPT"   // <-- IMPORTANT: Change this to a real file for testing
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",              // Specify that the debugger is GDB
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}